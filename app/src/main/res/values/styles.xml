<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewTitle">
        <item name="android:textSize">@dimen/cardview_title_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/cardview_title_marginLeft</item>
        <item name="android:layout_marginStart">@dimen/cardview_title_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/cardview_title_marginRight</item>
        <item name="android:layout_marginEnd">@dimen/cardview_title_marginRight</item>
        <item name="android:layout_marginBottom">@dimen/cardView_title_marginBottom</item>
        <item name="android:layout_marginTop">@dimen/cardiew_title_marginTop</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CardViewText">
        <item name="android:textSize">@dimen/cardview_text_textSize</item>
        <item name="android:layout_marginLeft">@dimen/cardview_text_marginLeft</item>
        <item name="android:layout_marginStart">@dimen/cardview_text_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/cardview_text_marginRight</item>
        <item name="android:layout_marginEnd">@dimen/cardview_text_marginRight</item>
        <item name="android:layout_marginBottom">@dimen/cardView_text_marginBottom</item>
        <item name="android:layout_marginTop">@dimen/cardiew_text_marginTop</item>
        <item name="android:lineSpacingExtra">@dimen/cardview_text_lineSpacing</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>
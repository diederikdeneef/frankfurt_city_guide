<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/txt_credits_marginLeft"
        android:layout_marginLeft="@dimen/txt_credits_marginLeft"
        android:layout_marginTop="@dimen/txt_credits_marginTop"
        android:layout_marginEnd="@dimen/txt_credits_marginRight"
        android:layout_marginRight="@dimen/txt_credits_marginRight"
        android:autoLink="web"
        android:lineSpacingExtra="@dimen/txt_credits_lineSpacing"
        android:textSize="@dimen/txt_credits_textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

</androidx.constraintlayout.widget.ConstraintLayout>